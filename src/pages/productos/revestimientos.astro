---

import Layout from "../../layouts/Layout.astro";
import Data from "../../../public/data/productos.json"
import ProdCard from "../../components/ProdCard.astro";
import BannerProductos from "../../components/BannerProductos.astro";
const title = "Revestimientos"

const productos = Data
const dataFiltrada = productos.filter((dato)=>{
    return dato.cat === title })

---

<Layout title= {title} >
    <main>
        <BannerProductos title={title}/>
        <div class="grid grid-cols-5 w-auto min-h-auto gap-5 m-5">
            {
                dataFiltrada.map((dato)=>{
                    return <ProdCard title={dato.title} desc={dato.desc} img={dato.img} desc2={dato.desc2} punteo1={dato.punteo1} punteo2={dato.punteo2} punteo3={dato.punteo3} punteo4={dato.punteo4} punteo5={dato.punteo5} punteo6={dato.punteo6}/>
                })
            }
        </div>
    </main>
</Layout>