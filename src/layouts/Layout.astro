---
import BtnWhatsapp from "../components/BtnWhatsapp.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;


---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./icon_logo_marca.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Rusticos Mendoza | {title}</title>

  </head>
  <body>
    <Navbar />
    <slot />
    <BtnWhatsapp />
    <Footer />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
        <!-- Meta Pixel Code -->
        <script type="module">
          import { hydrate } from "https://cdn.skypack.dev/astro/@astro/hydrate";
          
          const { fbq } = window;
    
          if (fbq) {
            fbq('init', '1530823477465079');
            fbq('track', 'PageView');
          } else {
            console.warn('El píxel de Facebook no está disponible.');
          }
        </script>
<noscript><img height="1" width="1" style="display:none"
src="https://www.facebook.com/tr?id=1530823477465079&ev=PageView&noscript=1"
/></noscript>
<!-- End Meta Pixel Code -->
  </body>
</html>

<style is:global>
  :root {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }
  body {
    background-color: rgb(241, 241, 241);
  }
</style>
