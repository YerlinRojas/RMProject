---
interface Props {
    pregunta: String;
    respuesta : String;
    idPregunta: String;
    idRespuesta: String
};

const {pregunta, respuesta, idPregunta, idRespuesta} = Astro.props

---

<div>
    <h2 id=`${idPregunta}`>
        <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target=`#${idRespuesta}` aria-expanded="false" aria-controls={idRespuesta}>
          <span>{pregunta}</span>
          <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
          </svg>
        </button>
      </h2>
      <div id=`${idRespuesta}` class="hidden" aria-labelledby=`${idPregunta}`>
        <div class="py-5 border-b border-gray-200 dark:border-gray-700">
          <p class="mb-2 text-gray-500 dark:text-gray-400">{respuesta}</p>
          
        </div>
      </div>
</div>