---
interface Props{
    title : String
}

const {title} = Astro.props

---
<div class="flex items justify-center sm:justify-center w-full h-24 sm:h-40 bg-cover bg-right lg:bg-center bg-no-repeat md:justify-start" style="background-image: url(../../public/images-home/Banner-products.png)">
    <div class="flex items-center sm:ml-10 bg-white shadow-sm bg-opacity-80 h-24 sm:h-40">
        <p class="m-5 text-xl sm:text-2xl md:text-4xl font-bold text-neutral-700">{title}</p>
    </div>
</div>
