---
import { Image } from 'astro:assets';
interface Props {
    title : String;
    desc : String;
    img : String
}

const {title, desc, img} = Astro.props
---

<div class="containerProductsDiv">
    <div >
        <a href="#"> 
            <img class="object-none rounded-lg h-48 w-96  border-4 border-slate-300 hover:border-red-700" src=`${img}` alt=`imagen ${title}`>
        </a>
    </div>
    <div>
        <h3 class="font-bold text-lg">{title}</h3>
        <p class="text-justify mr-16">{desc}</p>
    </div>
</div>

<style>
    .containerProductsHome{
        display: grid;
        grid-template-columns: auto;
        grid-template-rows: auto auto auto auto auto auto;
        
    }
    .containerProductsDiv{
        display: grid;
        grid-template-columns: 50% 50%;
        grid-template-rows: auto;
        justify-items: center;
        align-items: center;
        margin: 2% 2% 0% 2%;
    }
    .containerProductsDiv2{
        display: grid;
        grid-template-columns: 50% 50%;
        grid-template-rows: auto;
        justify-items: center;
        align-items: center;
        margin:2%
    }


    
</style>