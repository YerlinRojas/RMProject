---
import Data from "../../public/data/calificaciones.json"
import CalifCard from "./CalifCard.astro";

const data = Data
---

<div class="flex flex-col justify-center items-center sm:flex sm:flex-col sm:justify-center sm:items-center sm:w-full md:my-6 md:flex md:flex-col md:justify-center md:items-center md:w-full md:my-6  ">
    <p class=" text-sm font-bold mb-5  sm:text-4xl sm:font-bold sm:mb-5  md:text-4xl md:font-bold md:mb-5  ">Testimonios</p>
    <div class="flex justify-center items-center w-full gap-4">
        {
            data.map((dato)=>{
                return <CalifCard usuario={dato.usuario} iniciales={dato.iniciales} text={dato.text} />
            })
        }
    </div>    
</div>