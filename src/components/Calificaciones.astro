---
import Data from "../../public/data/calificaciones.json"
import CalifCard from "./CalifCard.astro";

const data = Data
---

<div class="flex flex-col justify-between items-center m-0 sm:m-4 md:m-10 border-t-4">
    <div >
        <h3 class="text-center text-xl font-semibold mb-5  sm:text-2xl  md:text-4xl">TESTIMONIOS</h3>

    </div>
    <div class="flex flex-col lg:flex-row ">
        {
            data.map((dato)=>{
                return <CalifCard usuario={dato.usuario} iniciales={dato.iniciales} text={dato.text} />
            })
        }
    </div>    
</div>
